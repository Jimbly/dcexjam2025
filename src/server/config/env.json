// Defaults per-environment, overridden by values in server.json
{
  // Defaults applied if nothing else is specified
  "defaults": {
    "log": {
      "level": "debug",
      "timestamp_format": "short",
      "local_log": true,
    },
  },

  // If running with --dev (and no --env specified)
  "dev": {
    "perf_counter_bucket_time": 10000,
    "log": {
      "cat": {
        "load": false,
        "subs": true,
      },
    },
  },

  // If nothing else is specified (non-dev, non-specific, e.g. running `node dist/game/build.prod/server`)
  "prod": {
    "status_time": 30000,
  },
}
